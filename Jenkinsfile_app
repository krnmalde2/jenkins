def gv
pipeline{
    agent any
    tools {
        maven 'Maven'
    }
    stages{

            stage("init") {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }

        stage("build")
        {
            steps{
                script{
                
                sh 'mvn package'
                }
                }
        }

    

        stage("deploying")
        {
            script {
                    gv.deployApp()
                }

        }
    }
}
